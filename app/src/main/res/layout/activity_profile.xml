<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.ProfileActivity"
    android:background="@mipmap/bg_vert">

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent">

            <ImageView
                android:id="@+id/ivBack"
                android:layout_height="50dp"
                android:layout_width="50dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:background="@drawable/arrow_left"/>

            <ImageView
                android:id="@+id/ivSingOut"
                android:layout_height="50dp"
                android:layout_width="50dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="265dp"
                android:background="@drawable/exit_icon_white"/>

        </LinearLayout>

        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="vertical"
            >

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/ivProfilePhoto"
                android:layout_height="250dp"
                android:layout_width="250dp"
                android:background="@drawable/account_circle_outline"
                android:layout_gravity="center"/>

            <ImageButton
                android:id="@+id/btEditPhoto"
                android:layout_height="45dp"
                android:layout_width="45dp"
                android:layout_marginTop="-70dp"
                android:layout_marginLeft="90dp"
                android:layout_gravity="center"
                android:background="@drawable/circle_button"
                android:src="@drawable/pencil"/>

            <TextView
                android:id="@+id/tvProfile"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_marginTop="30dp"
                android:text="Name"
                android:textColor="@color/white"
                android:textSize="40dp"
                android:layout_gravity="center"
                android:fontFamily="@font/inter_medium"/>

            <android.widget.Button
                android:id="@+id/btUpload"
                android:layout_width="170dp"
                android:layout_height="52dp"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:background="@drawable/corners"
                android:backgroundTint="@color/azulbt"
                android:fontFamily="@font/inter_medium"
                android:text="Actualizar"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="26dp"
                android:onClick="login"/>

            <ProgressBar
                android:id="@+id/progresBar"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:layout_marginTop="-50dp"
                android:visibility="gone"
                android:indeterminateTint="@color/azulbt"/>

        </LinearLayout>

        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_marginTop="-100dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_height="45dp"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="100dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/profile_data_layout">

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:textSize="22dp"
                    android:text="Name"
                    android:fontFamily="@font/inter_medium"
                    android:textColor="#AE7C7C7C"/>

                <TextView
                    android:id="@+id/tvProfileName"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="90dp"
                    android:textSize="22dp"
                    android:text="Name"
                    android:fontFamily="@font/inter_medium"
                    android:textColor="#000000"/>

            </LinearLayout>

            <LinearLayout
                android:layout_height="45dp"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/profile_data_layout">

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:textSize="22dp"
                    android:text="Last Name"
                    android:fontFamily="@font/inter_medium"
                    android:textColor="#AE7C7C7C"/>

                <TextView
                    android:id="@+id/tvProfileLName"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="36dp"
                    android:textSize="22dp"
                    android:text="Last Name"
                    android:fontFamily="@font/inter_medium"
                    android:textColor="#000000"/>

            </LinearLayout>

            <LinearLayout
                android:layout_height="45dp"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/profile_data_layout">

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:textSize="22dp"
                    android:text="Email"
                    android:fontFamily="@font/inter_medium"
                    android:textColor="#AE7C7C7C"/>

                <TextView
                    android:id="@+id/tvProfileEmail"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="95dp"
                    android:textSize="22dp"
                    android:text="Email"
                    android:fontFamily="@font/inter_medium"
                    android:textColor="#000000"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>